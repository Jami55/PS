#include <iostream>
#include <cstring>
#include <cmath>
using namespace std;

int f (int b , int p) {
        int r = 1;
        for (int i = 0; i < p; i ++) {
                r *= b;
        }
        cout << b << " ^ " << p << " = " << r << "\n";
        return r;
}

int main () {
        int b, p;
        cout << "Enter base number : ";
        cin >> b;
        cout << "Enter power number : ";
        cin >> p;
        f(b, p);
        return 0;
}

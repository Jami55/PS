#include <iostream>
#include <cstring>
#include <cmath>
using namespace std ;

int f (int n , int k , int a []) {
            int c = 0 ;
            for (int i = 1 ; i <= n ; i ++) {
                        if (a [i] >= a [k]) {
                                    c ++ ;
                        }
            }
            cout << c << "\n" ;
            return c ;
}

int main () {
            int n , k ;
            cin >> n >> k ;
            int a [n] ;
            for (int i = 1 ; i <= n ; i ++) {
                        cin >> a [i] ;
            }
            f (n , k , a) ;
            return 0 ;
}
